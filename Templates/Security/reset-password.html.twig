{%  extends "base.html.twig" %}

{% block title %}Nouveau mot de passe{% endblock %}


{% block body %}
    <!-- Hero Slider Block
    ================================================== -->

    <div class="section padding-top-big padding-bottom over-hide">
        <div class="parallax" style="background-image: url('{{ path }}/uploads/heros/chaise-3d_1920-1080_2.jpg')"></div>
        <div class="dark-fade-over"></div>
        <div class="hero-logo hidden-lg-up">
            <a href="{{ path }}">
                <img src="{{ path }}/uploads/logo/{{ blog.id }}/{{ blog.logo }}" alt="Logo" class="">
            </a>
        </div>
        <div class="hero-bottom-wrap ver-2 text-center z-bigger" style="bottom: -20px;">
            <div class="container-fluid parallax-fade-top" style="top: 0px;">
                <div class="row">
                    <div class="col-md-12">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="section pt-4 background-grey pb-md-4 over-hide z-bigger-2">
        <h4 class="text-center section-title">Nouveau mot de passe</h4>
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-md-6 col-xl-4 p-4 mt-3 rounded background-dark text-center">
                    <div class="main-title on-dark text-center my-0">
                        <div class="main-subtitle-bottom smaller mt-2">Redéfinissez votre mot de passe !</div>
                    </div>
                    <form method="post">
                        <div class="subscribe-box-1 dark for-hero mt-3">
                            <input type="email" name="confirm_email" placeholder="Email" class="form-control" value="{{ user.email }}" required/>
                            {% if user.entity.errors['confirm_email'] %}
                                <span class="badge badge-warning mt-1">{{ user.entity.errors['confirm_email'] }}</span>
                            {% endif %}
                        </div>
                        <div class="subscribe-box-1 dark for-hero mt-2">
                            <input type="password" name="plain_password" placeholder="Mot de passe" class="form-control" required/>
                            {% if user.entity.errors and constant('INVALID_PASSWORD', user.entity) in user.entity.errors %}
                                <span class="badge badge-warning mt-1 mx-1">Mot de passe invalide :<ul class="mt-1 mb-0 text-left"><li>8 à 50 caractères</li><li>Au moins une lettre minuscule</li><li>Au moins une lettre majuscule</li><li>Au moins un chiffre</li></ul></span>
                            {% endif %}
                        </div>
                        <div class="subscribe-box-1 dark for-hero mt-1">
                            <input type="password" name="confirm_password" placeholder="Confirmation du mot de passe" class="form-control" required/>
                            {% if user.entity.errors['confirm_pass'] %}
                                <span class="badge badge-warning mt-1">{{ user.entity.errors['confirm_pass'] }}</span>
                            {% endif %}
                        </div>
                        <input type="hidden" name="token" value="{{ csrf_token }}" class="crsf-token-field">
                        <div class="clear"></div>
                        <button type="submit" name="reset-btn" class="btn btn-primary btn-simple btn-round btn-long mt-4 mb-3" >Valider</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}