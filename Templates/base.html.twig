<head>

    <!-- Basic Page Needs
    ================================================== -->
    <meta charset="utf-8">
    <title>{% block title %}Base{% endblock %}</title>
    <meta name="description" content="{% block description %}Romain LOUET : développeur web PHP / Symfony{% endblock %}">
    <meta name="author" content="Romain LOUET">

    <!-- Mobile Specific Metas
    ================================================== -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="theme-color" content="#212121"/>
    <meta name="msapplication-navbutton-color" content="#212121"/>
    <meta name="apple-mobile-web-app-status-bar-style" content="#212121"/>

    <!-- Web Fonts
    ================================================== -->
    <link href="https://fonts.googleapis.com/css?family=Work+Sans:100,200,300,400,500,600,700,800,900" rel="stylesheet"/>
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet"/>
    <link href="https://fonts.googleapis.com/css?family=Crimson+Text:400,400i,600,600i,700,700i" rel="stylesheet"/>

    <!-- CSS
    ================================================== -->
    <link rel="stylesheet" href="{{ path }}/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="{{ path }}/css/font-awesome.min.css"/>
    <link rel="stylesheet" href="{{ path }}/css/mind-icons-line.css"/>
    <link rel="stylesheet" href="{{ path }}/css/funky-style.css"/>
    <link rel="stylesheet" href="{{ path }}/css/owl.carousel.css"/>
    <link rel="stylesheet" href="{{ path }}/css/owl.transitions.css"/>
    <link rel="stylesheet" href="{{ path }}/css/colors/color-green.css"/>
    <link rel="stylesheet" href="{{ path }}/custom/css/style.css"/>

    <!-- Favicons
    ================================================== -->
    <link rel="apple-touch-icon" sizes="180x180" href="{{ path }}/favicons/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="{{ path }}/favicons/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="{{ path }}/favicons/favicon-16x16.png">
    <link rel="manifest" href="{{ path }}/favicons/site.webmanifest">
    <link rel="mask-icon" href="{{ path }}/favicons/safari-pinned-tab.svg" color="#ddd">
    <meta name="msapplication-TileColor" content="#dddddd">
    <meta name="theme-color" content="#dddddd">

</head>
<body class="royal_preloader background-dark-2">

<div id="royal_preloader"></div>

<div id="flashMessages">
    {% for flash in flash_messages %}
        <div class="alert alert-{{ flash.type }} alert-dismissible fade show" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Fermer">
                <span aria-hidden="true"><i class="funky-ui-icon icon-Close"></i></span>
            </button>
            <div>{{ flash.message }}</div>
        </div>
    {% endfor %}
</div>

<!-- Nav and Logo
================================================== -->
{% block nav %}
<div id="menu-wrap" class="cbp-af-header black-menu-background-1st-trans menu-fixed-padding menu-shadow">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <nav class="navbar navbar-toggleable-md navbar-inverse bg-inverse bg-faded">
                    <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarNavMenuMain" aria-controls="navbarNavMenuMain" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path }}">
                        <img src="{{ path }}/uploads/logo/{{ blog.id }}/{{ blog.logo }}" alt="Logo">
                    </a>
                    <div class="collapse navbar-collapse justify-content-end" id="navbarNavMenuMain">
                        <ul class="navbar-nav">
                            <li class="nav-item dropdown mega-menu{% if section == "home" %} active{% endif %}">
                                <a class="nav-link" href="{{ path }}">
                                    Accueil
                                </a>
                            </li>
                            <li class="nav-item dropdown mega-menu{% if section == "book" %} active{% endif %}">
                                <a class="nav-link" href="{{ path }}/book/index">
                                    Book
                                </a>
                            </li>
                            <li class="nav-item dropdown mega-menu">
                                <a class="nav-link" href="{{ path }}/uploads/cv/{{ blog.id }}/{{ blog.cv }}" target="_blank">
                                    CV
                                </a>
                            </li>
                            <li class="nav-item dropdown mega-menu">
                                <a class="nav-link" href="{{ path }}#contactSection">
                                    Contact
                                </a>
                            </li>
                            {% if current_user.isGranted('user') %}
                            <li class="nav-item dropdown ml-md-5{% if section == "security" %} active{% endif %}">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarUserDetails" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="funky-ui-icon icon-User"></i>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarUserDetails">
                                    <div class="dropdown-header-container text-center">
                                        <a class="dropdown-header">{{ current_user.username }}</a>
                                    </div>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="{{ path }}/profile/show">Profil</a>
                                    {% if current_user.isGranted('admin') %}<a class="dropdown-item" href="{{ path }}/admin">Administration</a>{% endif %}
                                    <a class="dropdown-item" href="{{ path }}/logout">Déconnexion</a>
                                </div>
                            </li>
                            {% else %}
                            <li class="nav-item ml-md-5{% if section == "security" %} active{% endif %}">
                                <a class="btn btn-primary nav-link tipped" href="{{ path }}/login" data-title="Connexion / Inscription" data-tipper-options='{"direction":"bottom","margin":10}'>
                                    Connexion
                                </a>
                            </li>
                            {% endif %}
                        </ul>
                    </div>
                </nav>
            </div>
        </div>
    </div>
</div>
{% endblock %}

<!-- Primary Page Layout
================================================== -->

{% block body %}
    <h1>Body</h1>
{% endblock %}

{% include('footer.html.twig') %}

{% if not cookies_accepted %}
<div class="container-fluid" id="confirmCookiesContainer">
    <div class="cookie-notice row align-items-center">
        <div class="cn-text col-md-10">
            <p>Nous utilisons de cookies afin d'améliorer votre expérience. En continuant sur ce site, vous adhérez à nos <a href="{{ path }}/legal/cgu" class="btn-link btn-primary list-inline-item p-0 m-0 ml-1">conditions générales d'utilisation</a>.</p>
        </div>
        <div class="cn-btn col-md-2 text-md-right text-center mt-2 mt-md-0">
            <button class="btn btn-sm btn-primary" id="confirmCookiesBtn">J'accepte</button>
        </div>
    </div>
</div>
{% endif %}
<div class="scroll-to-top"><i class="fa fa-angle-up"></i></div>

<!-- JAVASCRIPT
================================================== -->
<script src="{{ path }}/js/jquery-3.2.1.min.js"></script>
<script src="{{ path }}/js/royal_preloader.min.js"></script>
<script src="{{ path }}/js/tether.min.js"></script>
<script src="{{ path }}/js/bootstrap.min.js"></script>
<script src="{{ path }}/js/plugins.js"></script>
<script src="{{ path }}/custom/js/custom-alerts.js"></script>
<script>
    const secureCookies = {% if app_config.get('secure_cookies') == 'true' %}true{% else %}false{% endif %};

</script>
<script src="{{ path }}/custom/js/custom-cookies-notice.js"></script>
<script src="{{ path }}/custom/js/custom-base.js"></script>
{% block javascripts %}
{% endblock %}
