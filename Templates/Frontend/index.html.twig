{%  extends "base.html.twig" %}

{% block title %}Home{% endblock %}


{% block body %}
<!-- Hero Slider Block
================================================== -->

<div class="section full-height">
    <div class="parallax" style="background-image: url('{{ path }}/uploads/heros/chaise-3d_1920-1080_2.jpg')"></div>
    <div class="dark-fade-over"></div>
    <div class="hero-logo hidden-lg-up">
        <a href="{{ path }}">
            <img src="{{ path }}/uploads/logo/{{ data.id }}/{{ data.logo }}" alt="Logo" class="">
        </a>
    </div>
    <div class="hero-center-wrap z-bigger">
        <div class="container hero-text parallax-fade-top">
            <div class="row">
                <div class="col-md-12">
                    <h2 class="typed text-white"><span id="typed-1"></span></h2>
                    <div class="subtext mt-3 text text-warning">{{ data.teaserphrase|nl2br }}</div>
                    <ul class="hero-social img-social mb-0 mt-5">
                        {% for network in data.socialnetworks %}
                            <li>
                                <a href="{{ network.url }}" title="Aller sur ma page {{ network.name }}"><img src="{{ path }}/uploads/icons/{{ data.id }}/{{ network.logo }}" alt="logo {{ network.name }}"></a>
                            </li>
                        {% endfor %}
                    </ul>
                    <div class="clear"></div>
                    <a href="{{ path }}/uploads/cv/{{ data.id }}/{{ data.cv }}" class="btn btn-primary btn-simple btn-round btn-long mt-5" target="_blank">Voir mon CV</a>
                </div>
            </div>
        </div>
    </div>
    <div class="hero-bottom-wrap ver-2 text-center z-bigger">
        <div class="container-fluid parallax-fade-top" style="top: 0px;">
            <div class="row">
                <div class="col-md-12">
                    <h2>{{ data.firstname }} {{ data.lastname }}</h2>
                </div>
            </div>
        </div>
    </div>
</div>

    <div class="section background-dark-1 z-bigger-2 text-white padding-top-small" id="contactSection">
        <h2 class="dark-1-title text-center">Me contacter</h2>
        <form class="contactform mt-5">
            <div class="container form-on-dark">
                <div class="row justify-content-around">
                    <div class="col-md-4">
                        <div class="subscribe-box-1">
                            <label>Nom</label>
                            <input type="text" name="lastname" value="" placeholder="Votre nom" class="form-control">
                        </div>
                    </div>
                    <div class="col-md-4 mt-4">
                        <div class="subscribe-box-1">
                            <label>Prénom</label>
                            <input type="text" name="firstname" value="" placeholder="Votre prénom" class="form-control">
                        </div>
                    </div>
                    <div class="clear"></div>
                    <div class="col-md-4 mt-4">
                        <div class="subscribe-box-1">
                            <label>Email</label>
                            <input type="email" name="email" value="" placeholder="Votre Email" class="form-control">
                        </div>
                    </div>
                    <div class="col-md-4 mt-4">
                        <div class="subscribe-box-1">
                            <label>Téléphone</label>
                            <input type="text" name="phone" value="" placeholder="Votre téléphone" class="form-control">
                        </div>
                    </div>
                    <div class="clear"></div>
                    <div class="col-md-8 mt-4">
                        <div class="subscribe-box-1">
                            <label>Sujet</label>
                            <input type="text" name="phone" value="" placeholder="Sujet du message" class="form-control">
                        </div>
                    </div>
                    <div class="clear"></div>
                    <div class="col-md-8 mt-4">
                        <div class="subscribe-box-1">
                            <label>Message</label>
                            <textarea name="teaser_phrase" placeholder="Votre message" class="for-textarea form-control"></textarea>
                        </div>
                    </div>
                    <div class="clear mb-4"></div>
                    <input class="btn btn-primary" type="submit" name="blog-update" value="Envoyer" />
                </div>
            </div>
        </form>
        <div class="container mt-5 contact-infos pb-5">
            <div class="row justify-content-around">
                <div class="col-md-4 mt-4 mt-md-0">
                    <div class="services-box-1 p-0 text-center">
                        <i class="funky-ui-icon icon-Smartphone-4"></i>
                        <h5 class="mt-3 pb-0 mb-0 text">{{ data.phone }}</h5>
                    </div>
                </div>
                <div class="col-md-4 mt-4 mt-md-0">
                    <div class="services-box-1 p-0 text-center">
                        <i class="funky-ui-icon icon-Mail-Open"></i>
                        <h5 class="mt-3 pb-0 mb-0">{{ data.email }}</h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}