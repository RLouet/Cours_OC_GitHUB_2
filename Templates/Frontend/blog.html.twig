{%  extends "base.html.twig" %}

{% block title %}Book{% endblock %}


{% block body %}
    <!-- Hero Slider Block
    ================================================== -->

    <div class="section padding-top-big padding-bottom over-hide">
        <div class="parallax" style="background-image: url('{{ path }}/uploads/heros/chaise-3d_1920-1080.jpg')"></div>
        <div class="dark-fade-over"></div>
        <div class="hero-logo hidden-lg-up">
            <a href="{{ path }}">
                <img src="{{ path }}/uploads/logo/{{ blog.id }}/{{ blog.logo }}" alt="Logo" class="">
            </a>
        </div>
        <div class="hero-bottom-wrap ver-2 text-center z-bigger" style="bottom: -20px;">
            <div class="container-fluid parallax-fade-top" style="top: 0px;">
                <div class="row">
                    <div class="col-md-12">
                        <h2>Book</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="section pt-4 background-grey pb-4 over-hide z-bigger-2">
        <h4 class="text-center">Posts enregistr√©s</h4>
        <div class="container-fluid">
            <div class="row justify-content-center">

                {% for post in posts %}
                    <div class="grid-box float-inline quarter with-margin drop-shadow rounded post-item-{{ post.id }}">
                        <div class="blog-box-1 blog-home blog-admin background-white over-hide">
                            <img src="{{ path }}/{% if post.hero %}uploads/blog/{{ post.id }}/{{ post.hero.url }}{% else %}img/blog/1.jpg{% endif %}" alt="" class="blog-home-img"/>
                            <div class="padding-in">
                                <a href="{{ path }}/admin/posts/{{ post.id }}/view"><h5 class="pt-4 mt-3">{{ post.title }}</h5></a>
                                <p class="mt-3">{{ post.chapo|nl2br }}</p>
                                <a href="{{ path }}/book/{{ post.id }}/view" class="btn-link btn-primary pl-0 mt-4">Lire la suite</a>
                                <div class="separator-wrap pt-4">
                                    <span class="separator"><span class="separator-line"></span></span>
                                </div>
                                <div class="author-wrap mt-3">
                                    <p> Par <span class="text-primary">{{ post.user.username }}</span>, le <mark>{{ post.editDate|date('d/m/Y') }}</mark></p>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}

            </div>
        </div>
    </div>
    </div>
{% endblock %}