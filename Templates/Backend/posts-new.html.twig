{%  extends "Backend/back-base.html.twig" %}

{% block title %}Blog de {{ blog.firstname }} {{ blog.lastname }} - Nouveau post{% endblock %}


{% block body %}

    <div class="section padding-top little-pt-mobile over-hide">
        <div class="dark-fade-over"></div>
        <div class="container parallax-fade-top">
            <div class="row">
                <div class="col-md-12">
                    <div class="main-title text-center on-dark">
                        <h2>Nouveau post</h2>
                        <div class="main-subtitle-bottom mt-3">
                            Ajoutez un élément dans votre book.
                        </div>
                    </div>
                </div>
                <div class="clear"></div>
            </div>
        </div>
    </div>

    {% include 'forms/post-form.html.twig' %}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ path }}/custom/js/custom-admin-post.js"></script>
{% endblock %}